							p(class="content-text-efecto-servicios-item-desc") Creamos y/o rediseñamos el sitio de tu marca
						div(class="content-text-efecto-servicios-item")
							img(src="./img/menuiconhome.png")
							p(class="content-text-efecto-servicios-item-titulo") Diseño Grafico
							p(class="content-text-efecto-servicios-item-desc") Desc
						div(class="content-text-efecto-servicios-item")
							img(src="./img/menuiconhome.png")
							p(class="content-text-efecto-servicios-item-titulo") Desarrollo de Aplicaciones
							p(class="content-text-efecto-servicios-item-desc") Desc
						div(class="content-text-efecto-servicios-item")
							img(src="./img/menuiconhome.png")
							p(class="content-text-efecto-servicios-item-titulo") Web Responsive
							p(class="content-text-efecto-servicios-item-desc") Desc
						div(class="content-text-efecto-servicios-item")
							img(src="./img/menuiconhome.png")
							p(class="content-text-efecto-servicios-item-titulo") Imagen de Marca
							p(class="content-text-efecto-servicios-item-desc") Desc
						div(class="content-text-efecto-servicios-item")
							img(src="./img/menuiconhome.png")
							p(class="content-text-efecto-servicios-item-titulo") Fotografia
							p(class="content-text-efecto-servicios-item-desc") Desc
	script(src="https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.6/hammer.min.js")

	script.
		
		(function(){
		var boton = document.getElementById('botoncito');
		var menu = document.getElementById('mimenu');
		var close = document.getElementById('close');
		var hammerPanel = new Hammer(document.querySelector("#contenedor"));
		var hammerSide = new Hammer(menu);

		
		hammerPanel.on('swiperight', function(){
		menu.classList.toggle('active');
		document.querySelector("#contenedor").classList.toggle('active');
		boton.style.display="none";
		});

		hammerSide.on('swipeleft', function(){		
		document.querySelector("#contenedor").classList.toggle('active');
		menu.classList.toggle('active');
		boton.style.display="inline";
		});

		boton.addEventListener('click', function(){
			menu.classList.toggle('active');
			document.querySelector("#contenedor").classList.toggle('active');
			boton.style.display="none";
		});

		close.addEventListener('click', function(){
			menu.classList.toggle('active');
			document.querySelector("#contenedor").classList.toggle('active');
			boton.style.display="inline";
		});
		
		}());