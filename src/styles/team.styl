@import ('./normalize.css')
@import ('./reset')


/*TEXTOS*/
$CelesteText = #04BAEE
$VerdeText = #C0D356
$GrisText = #9C9B9B
$PlaceholderText = #EDEDED
$FooterText = #FFF

/*DESKTOP, TABLETS Y CELULARES*/
$Celeste = #04BAEE
$Gris = #727272
@font-face 
  font-family 'Titulos'
  src url('../fonts/Geomanist-Regular.otf') 
@font-face
	font-family 'Titulos-Textos'
	src url('../fonts/Junction-bold.otf')
@font-face
	font-family 'Textos'
	src url('../fonts/Junction-light.otf')
body
	font-family 'Titulos'
	font-size 16px
	margin 0 auto
	color white
	.global
		@import 'header.styl'
		@import 'header_mobile'
		.header
			background-image url('../img/team/Mobile/banner_team.jpg')
		.content
			position absolute
			top 60px
			//margin-top 60px
			width 100vw
			height 100vh
			transition all .9s ease-in
			&.active
				filter: blur(20px); 
				-webkit-filter: blur(20px); 
				-moz-filter: blur(20px);
				-o-filter: blur(20px);
				-ms-filter: blur(20px);
			&-text
				&-efecto
					position absolute
					top 0px
					width 100vw
					text-align center
					display flex
					flex-direction row
					flex-wrap wrap
					&-encima
						width 70vw
						margin 0vh 15vw
						.titulo
							font-weight bold
							font-size 30px
							margin 1rem 0
							text-transform uppercase
							color $VerdeText
						.texto
							line-height 1.6em
							padding 1rem
							//color black