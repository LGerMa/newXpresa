@import ('./normalize.css')
@import ('./reset')



/*TEXTOS 0080FF el azul q me agrada :3 aqua*/
$CelesteText = #04BAEE
$VerdeText = #ADCA1E
$AquaText = #0080FF
$GrisText = #9C9B9B
$PlaceholderText = #EDEDED
$FooterText = #FFF

/*DESKTOP, TABLETS Y CELULARES*/
$Celeste = #04BAEE
$Gris = #727272
@font-face 
  font-family 'Titulos'
  src url('../fonts/Geomanist-Regular.otf') 
@font-face
	font-family 'Titulos-Textos'
	src url('../fonts/Junction-bold.otf')
@font-face
	font-family 'Textos'
	src url('../fonts/Junction-light.otf')

body
	font-family 'Titulos'
	font-size 16px
	margin 0 auto
	color white
	.global
		.header
			position fixed
			z-index 10
			top 0
			left 0
			width 100vw
			height 60px
			background white 
			display flex
			flex-wrap wrap
			flex-direction row
			justify-content space-between
			background-image url('../img/header-service.jpg')
			background-size cover
			&-txt
				display flex
				flex-direction row
				&-button
					width 30px
					height 30px
					margin 11px 10px
				&-titulos
					font-family 'Titulos'
					font-size 15px
					display flex
					flex-direction column
					h1
						color $CelesteText
						font-size 28px
						margin 8px 15px 3px 15px
					h4
						color $GrisText
						margin-left 15px
						span
							color #ADCA1E
						
				&-logo
					display none
			.Menu-lista
				z-index 2
				width 100vw
				height 100vh
				position absolute
				top 0
				left -100vw
				background-color black
				opacity .8
				transition left 0.3s ease-in
				text-align center
				display flex
				flex-direction column
				
				&.active
					left 0
				.cerrar
					align-self flex-end
					margin 3vh 20vw 0vh 0vw
				.flex-menu
					list-style none
					img
						margin 3vh 0vw 0vh 0vw
						width 50%
					&-item
						font-family 'Titulos'
						margin 0 20vw
						font-size 20px
						text-align center
						height 80px
						line-height 80px
						border-bottom: solid 1px white
						&-link
							color $VerdeText
							text-decoration none !important
							display block
		.content
			margin-top 60px
			position relative
			width 100vw
			transition all .9s ease-in
			&.active
				filter: blur(20px); 
				-webkit-filter: blur(20px); 
				-moz-filter: blur(20px);
				-o-filter: blur(20px);
				-ms-filter: blur(20px);
			&-especialidad
				text-align center
				&-texto
					.titulo
						font-size 40px
						padding 10vw 0vw 3vw 0vw
						text-transform uppercase
						color $AquaText
					.texto
						font-size 11px
						line-height 1.6em
						padding 0vw 10vw
						color $GrisText
						margin-bottom 10vw
				&-cuadros
					position relative
					display flex
					flex-direction row
					justify-content center
					flex-wrap wrap
					&-contentcard
						width 43vw
						height 43vw
						position relative
						margin 0 0
						-webkit-perspective 800px
						-moz-perspective 800px
						-o-perspective 800px
						perspective 800px
						&-card
							width 100%
							height 100%
							//position absolute
							position relative
							-webkit-transition -webkit-transform 1s
							-moz-transition -moz-transform 1s
							-o-transition -o-transform 1s
							transition transform 1s
							-webkit-transform-style preserve-3d
							-moz-transform-style preserve-3d
							-o-transform-style preserve-3d
							transform-style preserve-3d
							color black
							&.active
								-webkit-transform rotateY( 180deg )
								-moz-transform rotateY( 180deg )
								-o-transform rotateY( 180deg)
								transform rotateY( 180deg)
							.front
								//background transparent
								margin 0
								display block
								height 100%
								width 100%
								position absolute
								-webkit-backface-visibility hidden
								-moz-backface-visibility hidden
								-o-backface-visibility hidden
								backface-visibility hidden
								i
									color $AquaText
									font-size 40px
									margin 5vw 0%
								p
									margin 1vw 0%
								h6
									margin 1vw .5vw
							.back
								display block
								height 100%
								width 100%
								position absolute
								-webkit-backface-visibility hidden
								-moz-backface-visibility hidden
								-o-backface-visibility hidden
								backface-visibility hidden
								margin 0
								border dashed 1px $AquaText
								//background transparent
								-webkit-transform rotateY(180deg)
								-moz-transform rotateY(180deg)
								-o-transform rotateY(180deg)
								transform rotateY(180deg)
								background-color white
								i
									color $CelesteText
									font-size 40px
									margin 5vw 0%
								p
									margin 1vw 0%
								h6
									margin 1vw .5vw
			&-aptitudes
				text-align center
				margin-top 40px
				&-texto
