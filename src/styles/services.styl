@import ('./normalize.css')
@import ('./reset')


/*TEXTOS*/
$CelesteText = #04BAEE
$VerdeText = #C0D356
$GrisText = #9C9B9B
$PlaceholderText = #EDEDED
$FooterText = #FFF

/*DESKTOP, TABLETS Y CELULARES*/
$Celeste = #04BAEE
$Gris = #727272
@font-face 
  font-family 'Titulos'
  src url('../fonts/Geomanist-Regular.otf') 
@font-face
	font-family 'Titulos-Textos'
	src url('../fonts/Junction-bold.otf')
@font-face
	font-family 'Textos'
	src url('../fonts/Junction-light.otf')

body
	font-family 'Titulos'
	font-size 16px
	margin 0 auto
	color white
	.global
		@import 'header.styl'
		@import 'header_mobile'
		.header
			background-image url('../img/services/Mobile/banner_service.jpg')
		.content
			position absolute
			top 60px
			//margin-top 60px
			width 100vw
			height 100vh
			transition all .9s ease-in
			&.active
				filter: blur(20px); 
				-webkit-filter: blur(20px); 
				-moz-filter: blur(20px);
				-o-filter: blur(20px);
				-ms-filter: blur(20px);
			&-slide
				picture
					margin 0 auto
					img
						z-index -2
						width 100%
						height 100%
			&-text
				&-efecto
					position absolute
					top 0px
					width 100vw
					text-align center
					display flex
					flex-direction row
					flex-wrap wrap
					&-encima
						width 70vw
						margin 0vh 15vw
						.titulo
							font-weight bold
							font-size 30px
							margin 1rem 0
							text-transform uppercase
							color $VerdeText
						.texto
							line-height 1.6em
							padding 1rem
							//color black
					&-servicios
						display flex
						flex-direction row
						flex-wrap wrap
						width 70vw
						margin 0vh 15vw
						//border solid 1px red
						&-item
							height auto
							border solid 1px $VerdeText
							width 33vw
							word-wrap break-word
							&-titulo
								color white
							&-desc
								color white
					&-aptitudes
						display flex
						flex-direction column
						flex-wrap wrap
						position relative
						width 100vw
						margin-top 160px
						height 450px
						//height 100vh
						//background-color red
						&-principal
							position relative
							width 100vw
							//height 40vh
							height 100px
							.title
								color $CelesteText
								font-weight bold
								font-size 25px
								margin 1rem 0
								text-transform uppercase
							.desc
								line-height 1.6em
								padding 0.5rem
								color black
						&-figuras
							position relative
							width 100vw
							//height 60vh
							height 350px
							&-linea
								background-color $Celeste
								height 100%
								width 5px
								position absolute
								top 250px
								left 50vw
							&-item
								display flex
								flex-direction column
								flex-wrap wrap
								position relative
								//height 20vh
								//margin-top 5vh
								&-circulo
									background-color $Celeste
									//height  17vh
									//width 30vw
									position absolute
									left 35vw
									//border solid 1px $Celeste
									border-radius 50%						

@media (min-width:768px)
	body
		.global
			@import 'header_desktop.styl'
			.header
				background-image url('../img/services/Desktop/banner_service.jpg')
			.content
				position relative
				width 100vw
				transition all .9s ease-in
				&.active
					filter: blur(20px);
					-webkit-filter: blur(20px);
					-moz-filter: blur(20px);
					-o-filter: blur(20px);
					-ms-filter: blur(20px);
				&-slide
					picture
						margin 0 auto
						img
							z-index -2
							width 100%
							height 100%
				