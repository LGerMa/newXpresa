@import ('./normalize.css')
@import ('./reset')


/*TEXTOS*/
$CelesteText = #04BAEE
$VerdeText = #C0D356
$GrisText = #9C9B9B
$PlaceholderText = #EDEDED
$FooterText = #FFF

/*DESKTOP, TABLETS Y CELULARES*/
$Celeste = #04BAEE
$Gris = #727272
@font-face 
  font-family 'Titulos'
  src url('../fonts/Geomanist-Regular.otf') 
@font-face
	font-family 'Titulos-Textos'
	src url('../fonts/Junction-bold.otf')
@font-face
	font-family 'Textos'
	src url('../fonts/Junction-light.otf')

body
	font-family 'Titulos'
	font-size 16px
	margin 0 auto
	color white
	.global
		@import 'header.styl'

@media (min-width:768px)
	body
		.global
			@import 'header_desktop.styl'
			.header
				background-image url('../img/services/Desktop/banner_service.jpg')
		.content
			position relative
			width 100vw
			transition all .9s ease-in
			&.active
				filter: blur(20px);
				-webkit-filter: blur(20px);
				-moz-filter: blur(20px);
				-o-filter: blur(20px);
				-ms-filter: blur(20px);
			&-slide
				picture
					margin 0 auto
					img
						z-index -2
						width 100%
						height 100%
				