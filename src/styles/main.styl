	src url('../fonts/Junction-light.otf')

@charset "utf-8";
@keyframes slidy {
	0% { left: 0%; }
	10% { left: 0%; }
	20% { left: 0; }
	30% { left: 0%; }

	40% { left: -100%; }
	50% { left: -100%; }
	60% { left: -100%; }
	65% { left: -100%; }

	70% { left: -200%; }
	80% { left: -200%; }
	90% { left: -200%; }
	100% { left: -200%; }
}


body
	font-family 'Titulos'
	font-size 16px
	margin 0 auto
	color white

	.global
		.header	
			position fixed
			z-index 10
			margin 0 auto
			width 100vw
			&-txt-logo
				display none				
			&-txt-button
				position absolute
				left 10px
				top 10px
				width 25px
				height 25px
			&-txt-titulos
				display none
			.Menu-lista
				z-index 2
				width 100vw
				height 100vh
				position absolute
				top 0
				left -100vw
				background-color black
				opacity .8
				transition left 0.3s ease-in
				text-align center
				display flex
				flex-direction column
				
				&.active
					left 0
				.cerrar
					align-self flex-end
					margin 3vh 20vw 0vh 0vw
				.flex-menu
					list-style none
					img
						margin 3vh 0vw 0vh 0vw
						width 50%
					&-item
						font-family 'Titulos'
						margin 0 20vw
						font-size 20px
						text-align center
						height 80px
						line-height 80px
						border-bottom: solid 1px white
						&-link
							color $VerdeText
							text-decoration none !important
							display block
		.content
			position relative
			width 100vw
			transition all .9s ease-in
			&.active
				filter: blur(20px); 
				-webkit-filter: blur(20px); 
				-moz-filter: blur(20px);
				-o-filter: blur(20px);
				-ms-filter: blur(20px);
			&-slide
				overflow hidden
				figure
					position relative
					width 300%
					height 50%
					margin 0
					left 0
					max-width 300% !important
					animation 8s slidy infinite alternate
					picture
						img
							display inline
							z-index -2
							width 100vw
							height 50%
			&-text					
				&-efecto
					position relative
					margin-top -80px
					width 0px
					border-left 50vw solid #fff
					border-right 50vw solid #fff
					border-top 35px solid transparent
					&-encima
						position relative
						margin-left -50vw
						width 100vw
						text-align center
						.titulo
							font-weight bold
							//font-size 40px
							font-size $Cuerpo_subtitulo_mobile
							margin 1rem 0
							text-transform uppercase
							color $VerdeText
						.texto
							text-align justify
							//font-size 25px
							font-size $Cuerpo_textos_mobile
							line-height 1.6em
							padding 2vw 10vw
							color $GrisText
						picture
							img
								position relative
								width 100vw
								height 250px
								padding 0
								margin 0 0
						.encima-footer
							position relative
							height 30vh
							line-height 10vh
							margin-top -30vh
							&-titulo
								padding 1px 3px
								font-size 22px
								text-transform uppercase
							&-parrafo
								font-size 18px
							&-button
								border none
								padding 8px 16px
								border-radius 5px
								background $CelesteText
								line-height 30px
								color white
								font-weight bold
								border-bottom solid 2px $VerdeText
								text-decoration none
			footer
				text-align center
				border-top solid 10px $CelesteText
				width 100vw
				position relative
				left 0
				bottom 0
				height 150px	
				background $Gris
				display flex
				flex-direction column
				flex-wrap wrap
				justify-content space-around
@media (min-width:768px)
	body
		.global
			.header
				opacity 0
				width 100vw
				height 100px
				background white
				display flex
				flex-wrap wrap
				flex-direction row
